{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../../dist/ui",
    "composite": true,

    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    // "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "lib": ["dom", "dom.iterable", "esnext"],
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
    "./**/*.js",
    "./**/*.tsx",
    "./**/*.jsx"
  ],
  "references": [{ "path": "../lib" }, { "path": "./tsconfig.node.json" }]
}
