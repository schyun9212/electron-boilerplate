{
  // "extends": "@tsconfig/svelte/tsconfig.json",
  "extends": "./.svelte-kit/tsconfig.json",

  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../../dist/ui",
    "composite": true,

    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
    "./**/*.js",
    "./**/*.svelte",
    "svelte.config.js"
  ],
  "references": [{ "path": "../lib" }, { "path": "./tsconfig.node.json" }]
}
